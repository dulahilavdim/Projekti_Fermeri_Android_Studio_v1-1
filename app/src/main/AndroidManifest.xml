<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.layoutfermeri.fermeri">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fontFamily="sans-serif-condensed"
        android:icon="@mipmap/launcher_farmer"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />

        <receiver android:name=".AlarmReceiver">
            <intent-filter>
                <action android:name="android.action.DISPLAY_NOTIFICATION" />
            </intent-filter>
        </receiver>

        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Kafshet"
            android:label="Kafshet" />
        <activity
            android:name=".RegjistroMain"
            android:label="Regjistro kafshet" />
        <activity
            android:name=".RegjistroGjedhe"
            android:label="Regjistro gjedhe" />
        <activity
            android:name=".RegjistroDele"
            android:label="Regjistro dele" />
        <activity
            android:name=".RegjistroKuaj"
            android:label="Regjistro kuaj" />
        <activity
            android:name=".Kalkulatori_Lindjes"
            android:label="Kalkulatori i lindjes" />
        <activity
            android:name=".Ndihma"
            android:label="Ndihma" />
        <activity
            android:name=".ListView_Gjedhe"
            android:label="Lista e Gjedheve" />
        <activity android:name=".Llogarit_Daten_Shtimit" />
        <activity
            android:name=".ListView_Dele"
            android:label="Lista e Deleve" />
        <activity android:name=".regjistro_nga_kalendari" />

        <service android:name=".MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".MyFirebaseInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>